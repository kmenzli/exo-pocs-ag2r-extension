<?xml version="1.0" encoding="UTF-8"?>
<page>
    <owner-type></owner-type>
    <owner-id/>
    <name/>
    <container id="SpaceMenu" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
        <portlet-application>
            <portlet>
                <application-ref>social-portlet</application-ref>
                <portlet-ref>SpaceMenuPortlet</portlet-ref>
                <preferences>
                    <preference>
                        <name>SPACE_URL</name>
                        <value>{spaceName}</value>
                        <read-only>false</read-only>
                    </preference>
                </preferences>
            </portlet>
            <access-permissions>*:/platform/users</access-permissions>
            <show-info-bar>false</show-info-bar>
        </portlet-application>
    </container>
    <container id="SpaceApplications" template="system:/groovy/portal/webui/container/UITableColumnContainer.gtmpl">
        <container id="LeftAgrContainer" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
            <portlet-application>
                <portlet>
                    <application-ref>presentation</application-ref>
                    <portlet-ref>ContentListViewerPortlet</portlet-ref>
                    <preferences>
                        <preference>
                            <name>folderPath</name>
                            <value>repository:collaboration:/sites/intranet/web contents/site artifacts/announcements</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>orderType</name>
                            <value>ASC</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>nodeDrive</name>
                            <value>Managed Sites</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>formViewTemplatePath</name>
                            <value>/exo:ecm/views/templates/content-list-viewer/list/OneColumn.gtmpl</value>
                            <read-only>false</read-only>
                        </preference>


                        <preference>
                            <name>basePath</name>
                            <value>detail</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>itemsPerPage</name>
                            <value>10</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>showTitle</name>
                            <value>false</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>showDateCreated</name>
                            <value>false</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>showHeader</name>
                            <value>false</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>showLink</name>
                            <value>false</value>
                            <read-only>false</read-only>
                        </preference>
                        <preference>
                            <name>showRssLink</name>
                            <value>false</value>
                            <read-only>false</read-only>
                        </preference>
                    </preferences>
                </portlet>
                <title>Announcement</title>
                <access-permissions>*:/platform/users</access-permissions>
                <show-info-bar>false</show-info-bar>
                <show-application-state>false</show-application-state>
                <show-application-mode>false</show-application-mode>
            </portlet-application>
        </container>
        <container id="ActivityStreamPortlet" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
            <portlet-application>
                <portlet>
                    <application-ref>social-portlet</application-ref>
                    <portlet-ref>SpaceActivityStreamPortlet</portlet-ref>
                    <preferences>
                        <preference>
                            <name>SPACE_URL</name>
                            <value>{spaceName}</value>
                            <read-only>false</read-only>
                        </preference>
                    </preferences>
                </portlet>
                <show-info-bar>false</show-info-bar>
            </portlet-application>
        </container>
    </container>
</page>
